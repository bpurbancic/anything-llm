# Enforce LF (Unix-style) line endings across all text files
* text=auto eol=lf

# Explicit line ending settings for common file types
*.py     text eol=lf
*.js     text eol=lf
*.ts     text eol=lf
*.jsx    text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.sh     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.txt    text eol=lf
*.env    text eol=lf
.gitattributes text eol=lf
.gitignore     text eol=lf

